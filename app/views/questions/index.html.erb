<% if current_user.present? %>
	<div>
		<div class="container">
			<p class="mt">
				<%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main' %>
			</p>

			<p class="mt">
				<%= render 'form', question: @question	%>
			</p>
		</div>

		<div class="container mt-sm">
			<h2 class="title-lg">
				<%= @questions.count %>
				<%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
			</h2>
		</div>

		<%= @questions.each do |question| %>
			<div class="mt-sm container">
				<%= render question %>
			</div>
		<% end %>
	</div>
<% else %>
	<div class="container">
		<p>Чтобы увидеть список вопросов, пожалуйста пройдите аутентификацию</p>
	</div>
<% end %>
